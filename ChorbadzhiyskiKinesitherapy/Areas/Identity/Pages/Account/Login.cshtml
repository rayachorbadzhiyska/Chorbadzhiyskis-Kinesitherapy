@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form id="account" method="post" role="form">
            <hr />
            <h2>Вход</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" placeholder="08........" />
                <label asp-for="Input.PhoneNumber" class="form-label">Телефонен номер</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="ЕГН" />
                <label asp-for="Input.Password" class="form-label">Парола</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    Запомни ме
                </label>
            </div>
            <button asp-page-handler="Login" id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Влез</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    $("#nav-sidebar").hide();
</script>