@using System.Diagnostics;
@model PatientViewModel

<form id="editPatient-@Model.Id" asp-controller="Patient" asp-action="Update" asp-route-id="@Model.Id" method="post" role="form">
    <div class="modal fade" id="editPatientModal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="editPatientModalLabel-@Model.Id" aria-hidden="true">
        <div class="modal-dialog modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPatientModalLabel-@Model.Id">Редактирай пациент</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-row align-items-end mb-2" style="display:flex; flex-direction: row; justify-content: center; align-items: flex-start">
                    <label asp-for="Name" class="form-label col-auto" style="margin-right:10px">Име</label>
                    <input asp-for="Name" class="form-control" placeholder="Име" style="margin-right:auto" autocomplete="on" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-row align-items-end my-2" style="display:flex; flex-direction: row; justify-content: center; align-items: flex-start">
                    <label asp-for="MobileNumber" class="form-label col-auto" style="margin-right:10px">Мобилен номер</label>
                    <input asp-for="MobileNumber" class="form-control" placeholder="Мобилен номер" style="margin-right:auto" autocomplete="on" />
                </div>

                <div class="form-row align-items-end my-2" style="display:flex; flex-direction: row; justify-content: center; align-items: flex-start">
                    <label asp-for="EGN" class="form-label col-auto" style="margin-right:10px">ЕГН</label>
                    <input asp-for="EGN" class="form-control" placeholder="ЕГН" style="margin-right:auto" autocomplete="on" />
                </div>

                <div class="form-row align-items-end my-2" style="display:flex; flex-direction: row; justify-content: center; align-items: flex-start">
                    <label asp-for="Birthday" class="form-label col-auto" style="margin-right:10px">Рожден ден</label>
                    <input type="date" asp-for="Birthday" class="form-control" style="margin-right:auto" />
                </div>

                <div class="form-row align-items-end my-2" style="display:flex; flex-direction: row; justify-content: center; align-items: flex-start">
                    <label asp-for="Address" class="form-label col-auto" style="margin-right:10px">Адрес</label>
                    <input asp-for="Address" class="form-control" placeholder="Адрес" style="margin-right:auto" autocomplete="on" />
                </div>

                <div class="form-row align-items-end my-2" style="display:flex; flex-direction: row; justify-content: center; align-items: flex-start">
                    <label asp-for="Diagnose" class="form-label col-auto" style="margin-right:10px">Диагноза</label>
                    <input asp-for="Diagnose" class="form-control" placeholder="Диагноза" style="margin-right:auto" autocomplete="on" />
                </div>

                <div class="form-row align-items-end mt-2" style="display:flex; flex-direction: row; justify-content: center; align-items: flex-start">
                    <label asp-for="FirstAppointment" class="form-label col-auto" style="margin-right:10px">Първи преглед</label>
                    <input type="date" asp-for="FirstAppointment" class="form-control" style="margin-right:auto" />
                </div>

                <div class="form-row align-items-end my-2" style="display:flex; flex-direction: row; justify-content: center; align-items: flex-start">
                    <label asp-for="Notes" class="form-label col-auto" style="margin-right:10px">Бележки</label>
                    <input asp-for="Notes" class="form-control" placeholder="Бележки" style="margin-right:auto" autocomplete="on" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Затвори</button>
                <button type="submit" class="btn btn-primary" onclick="updatePatient(@Model.Id)">
                    Редактирай
                </button>
            </div>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    // Function to handle updating a patient via AJAX
    function updatePatient(patientId) {
        $.ajax({
            type: 'POST',
            url: '/Patient/Update/' + encodeURIComponent(patientId), // Adjust the URL based on your route
            data: $('#editPatientForm-' + patientId).serialize(),
            success: function (data) {
                // Replace the existing row with the updated row
                $('#patientsTable tbody tr[data-patient-id="' + patientId + '"]').replaceWith(data);

                // Close the modal
                $('#editPatientModal-' + patientId).modal('hide');
            },
            error: function (error) {
                console.error('Error updating patient:', error);
            }
        });
    }
</script>